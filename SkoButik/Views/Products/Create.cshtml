@model SkoButik.Models.Product

@{
    ViewData["Title"] = "Create";
}

<div class="center-content" style="text-align: center">
    <h4>Create Product</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create" id="createProductForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label"></label>
                    <input asp-for="ImageUrl" class="form-control" id="imageUrlInput" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label>Default Image</label>
                    <img id="defaultImagePreview" src="@Url.Content(Model.ImageUrl)" class="img-thumbnail" style="width: 250px;" alt="Default Image" />
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FkBrandId" class="control-label"></label>
                    <select asp-for="FkBrandId" class="form-control" asp-items="ViewBag.FkBrandId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="FkCampaignId" class="control-label"></label>
                    <select asp-for="FkCampaignId" class="form-control" asp-items="ViewBag.FkCampaignId"></select>
                    <span asp-validation-for="FkCampaignId" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var imageUrlInput = document.getElementById('imageUrlInput');
            var defaultImagePreview = document.getElementById('defaultImagePreview');

            imageUrlInput.addEventListener('input', function () {
                defaultImagePreview.src = imageUrlInput.value;
            });
        });
    </script>
}