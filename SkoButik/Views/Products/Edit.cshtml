@model SkoButik.Models.Product

@{
    ViewData["Title"] = "Edit";
}


<h4 class="text-center"> Edit Product</h4>
<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" id="editProductForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group text-center">
                <label>Current Image</label>
                <img id="currentImagePreview" src="@Url.Content(Model.ImageUrl)" class="img-thumbnail" style="width: 250px;" alt="Current Image" />
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" id="imageUrlInput" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label>New Image Preview</label>
                <img id="newImagePreview" src="@Url.Content(Model.ImageUrl)" class="img-thumbnail" style="width: 250px;" alt="New Image Preview" />
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkBrandId" class="control-label"></label>
                <select asp-for="FkBrandId" class="form-control" asp-items="ViewBag.FkBrandId"></select>
                <span asp-validation-for="FkBrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkCampaignId" class="control-label"></label>
                <select asp-for="FkCampaignId" class="form-control" asp-items="ViewBag.FkCampaignId"></select>
                <span asp-validation-for="FkCampaignId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var imageUrlInput = document.getElementById('imageUrlInput');
            var newImagePreview = document.getElementById('newImagePreview');

            imageUrlInput.addEventListener('input', function () {
                newImagePreview.src = imageUrlInput.value;
            });
        });
    </script>
}

