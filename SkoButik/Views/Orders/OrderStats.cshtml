@model IEnumerable<SkoButik.Models.OrderStatsViewModel>

<h2>Order Statistics</h2>

<div class="col-12">
    <div class="card bg-light text-black mb-4">
        <div class="card-body">
            <h5 class="card-title">Recent Orders</h5>
            <table class="table table-light table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Order Count</th>
                        <th>Total Sales (SEK)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.OrderCount</td>
                            <td>@item.TotalSales.ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div>
    <a asp-controller="Dashboard" asp-action="Dashboard" class="btn btn-success">Admin Dashboard</a>
</div>
